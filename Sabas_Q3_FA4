names = ["Me", "Lia", "Jake"]
steps = [
    [4500, 5200, 4800, 5000, 5300],
    [4000, 4100, 3900, 4200, 4600],
    [6000, 5800, 5900, 6100, 6200]
]

totals = [sum(person) for person in steps]
max_total = max(totals)
min_total = min(totals)
max_index = totals.index(max_total)

print(f"{names[max_index]} has the highest total steps: {max_total}")
print(f"Difference between highest and lowest total: {max_total - min_total}")
